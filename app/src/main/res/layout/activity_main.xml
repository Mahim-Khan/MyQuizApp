<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/quizIcon"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/choose"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/chooseTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quizIcon"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif"
        android:text="Choose A Topic"
        android:textColor="#00C853"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_below="@id/chooseTopic"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/javaLayout"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_back_white10"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/java"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="Java"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/phpLayout"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/round_back_white10"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/php"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="php"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay2"
        android:layout_below="@id/lay1"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/htmlLayout"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_back_white10"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/html"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="Html"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/androidLayout"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/round_back_white10"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/android"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="Android"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_green20"
        android:text="Start Quiz"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />




</RelativeLayout>